using System;

class Program
{
    static void Main()
    {
        Console.Write("n = ");
        int n = int.Parse(Console.ReadLine());

        if ((n >= 1) && (n <= 20))
        {
            for (int i = 1; i <= n; i++)
            {
                for (int j = i; j < n + i; j++)
                {
                    Console.Write("{0,2} ", j);
                }
                Console.WriteLine();
            }
        }
        else
        {
            Console.WriteLine("Invalid Number! Try again!");
        }
    }
}
